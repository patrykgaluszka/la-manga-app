---
export interface Props {
  href: string;
  class?: string;
}

const { href, class: className = '' } = Astro.props;
const fullHref = href.startsWith('http') || href.startsWith('mailto:') || href.startsWith('tel:') 
  ? href 
  : `${import.meta.env.BASE_URL}${href.startsWith('/') ? href.slice(1) : href}`;
---

<a 
  href={fullHref} 
  class={`inline-block bg-ocean-500 text-white px-4 py-2 rounded-lg hover:bg-ocean-600 transition-colors no-underline ${className}`}
  style="text-decoration: none !important; color: white !important;"
>
  <slot />
</a>