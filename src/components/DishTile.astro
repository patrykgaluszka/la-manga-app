---
export interface Props {
  title: string;
  desc: string;
  imageSrc?: string;
}

const { title, desc, imageSrc } = Astro.props;
---


<div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200 p-6 mb-6 border border-gray-100">
  <h3 class="text-xl font-bold text-gray-800 mb-4">
    {title}
  </h3>
  
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 items-start">
    {imageSrc ? (
      <div class="md:col-span-1">
        <img 
          src={imageSrc} 
          alt={title}
          class="w-full h-48 object-cover rounded-lg"
          loading="lazy"
        />
      </div>
    ) : null}
    
    <div class={imageSrc ? "md:col-span-2" : "md:col-span-3"}>
      <p class="text-gray-700 leading-relaxed">
        {desc}
      </p>
    </div>
  </div>
</div>