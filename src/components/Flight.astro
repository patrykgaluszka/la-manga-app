---
export interface Props {
  from: string;
  to: string;
  date: string;
  departure: string;
  arrival: string;
  operator: string;
  flightNumber: string;
}

const { from, to, date, departure, arrival, operator, flightNumber } = Astro.props;
---

<div class="py-4 my-4">
  <h3 class="text-lg font-bold text-gray-800 mb-2">
    ✈️ {from} - {to}
  </h3>
  <div class="text-sm text-gray-600 mb-3">
    {date}
  </div>
  
  <div class="relative">
    <!-- Horizontal line -->
    <div class="absolute top-1/2 left-0 right-0 h-px bg-gray-300 transform -translate-y-1/2"></div>
    
    <!-- Text layers with white backgrounds -->
    <div class="flex items-center justify-between relative">
      <div class="text-left bg-white px-2">
      <div class="text-lg font-semibold text-gray-800">
        {departure}
      </div>
    </div>
    
      <div class="text-center bg-white px-3">
      <div class="text-sm text-gray-500">
        {operator}<br/>{flightNumber}
      </div>
    </div>
    
      <div class="text-right bg-white px-2">
      <div class="text-lg font-semibold text-gray-800">
        {arrival}
      </div>
    </div>
    </div>
  </div>
</div>